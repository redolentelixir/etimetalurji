    <!-- History Section -->
    <section id="tarihce" class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-gray-800 mb-12 text-center">Tarihçemiz</h2>
            
            <div class="relative">
                <!-- Timeline -->
                <div class="space-y-8">
                    <!-- Timeline Item 1 -->
                    <div class="timeline-item relative pl-8">
                        <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
                            <div class="absolute -left-3 top-6 w-6 h-6 bg-blue-600 rounded-full border-4 border-white"></div>
                            <h3 class="text-xl font-semibold text-blue-600 mb-2">19. Yüzyıl</h3>
                            <p class="text-gray-700">
                                Fethiye, Muğla'da bulunan Krom yatakları yabancılar tarafından işletilmeye ve Avrupa'ya taşınmaya başladı.
                            </p>
                        </div>
                    </div>
                    
                    <!-- Timeline Item 2 -->
                    <div class="timeline-item relative pl-8">
                        <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
                            <div class="absolute -left-3 top-6 w-6 h-6 bg-blue-600 rounded-full border-4 border-white"></div>
                            <h3 class="text-xl font-semibold text-blue-600 mb-2">1935</h3>
                            <p class="text-gray-700">
                                Gazi Mustafa Kemal Atatürk'ün direktifiyle Etibank kuruldu. Fethiye'deki Krom ruhsatları Fethiye Şirket-i Madeniyesi T.A.Ş.'e geçti.
                            </p>
                        </div>
                    </div>
                    
                    <!-- Timeline Item 3 -->
                    <div class="timeline-item relative pl-8">
                        <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
                            <div class="absolute -left-3 top-6 w-6 h-6 bg-blue-600 rounded-full border-4 border-white"></div>
                            <h3 class="text-xl font-semibold text-blue-600 mb-2">1957</h3>
                            <p class="text-gray-700">
                                Türk Etibank ve Fransız Pechiney-Compadec grupları Antalya'da bir Düşük Karbonlu Ferrokrom Fabrikası kurmaya karar verdi.
                            </p>
                        </div>
                    </div>
                    
                    <!-- Timeline Item 4 -->
                    <div class="timeline-item relative pl-8">
                        <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
                            <div class="absolute -left-3 top-6 w-6 h-6 bg-blue-600 rounded-full border-4 border-white"></div>
                            <h3 class="text-xl font-semibold text-blue-600 mb-2">1962</h3>
                            <p class="text-gray-700">
                                Antalya Elektrometalurji Fabrikası törenle açıldı. Kuruluş üretim kapasitesi yılda 8 bin metrik-ton'du.
                            </p>
                        </div>
                    </div>
                    
                    <!-- Timeline Item 5 -->
                    <div class="timeline-item relative pl-8">
                        <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
                            <div class="absolute -left-3 top-6 w-6 h-6 bg-blue-600 rounded-full border-4 border-white"></div>
                            <h3 class="text-xl font-semibold text-blue-600 mb-2">2004</h3>
                            <p class="text-gray-700">
                                Özelleştirilerek Aksu Madencilik Sanayi ve Elektrik Üretim Ticaret A.Ş.'ye devredildi.
                            </p>
                        </div>
                    </div>
                    
                    <!-- Timeline Item 6 -->
                    <div class="timeline-item relative pl-8">
                        <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
                            <div class="absolute -left-3 top-6 w-6 h-6 bg-blue-600 rounded-full border-4 border-white"></div>
                            <h3 class="text-xl font-semibold text-blue-600 mb-2">2016</h3>
                            <p class="text-gray-700">
                                Yapılan yatırımlarla üretim kapasitesi yılda 36.000 metrik-ton'a çıkarıldı.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

